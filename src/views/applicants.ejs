<h1 class="m-5 mb-4">Applicants</h1>
<div style="display: flex; justify-content: center; align-items: center; width: 100vw;">
    <table class="table table-dark m-5">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Contact</th>
                <th scope="col">Resume</th>
            </tr>
        </thead>
        <tbody>
            <% candidates.forEach((candidate, index) => { %>
                <tr>
                    <th scope="row">
                        <%= index + 1 %>
                    </th>
                    <td>
                        <%= candidate.name %>
                    </td>
                    <td>
                        <%= candidate.email %>
                    </td>
                    <td>
                        <%= candidate.contact %>
                    </td>
                    <td>
                        <button class="btn btn-success" onclick="viewResume('/images/sumit')">View</button>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
