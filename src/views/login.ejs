<div style="display: flex; justify-content: center; align-items: center; height: 80vh; width: 100vw;">
    <form action="" method="post" enctype="multipart/form-data" style="border-top: 5px rgba(135, 128, 128, 0.884) solid;border-left: 2px rgba(135, 128, 128, 0.884) solid; padding: 30px; border-radius: 10px;height: auto; width: 500px;">
        <h2 style="text-align: center;">Login</h2>
        <div class="form-group" style="padding-bottom: 10px;">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" style="width: 100%;" required>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group" style="padding-bottom: 10px;">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" style="width: 100%;" required>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 100%;">Login</button> 
    </form>
</div>