<div class="login">

    <form>
        <h2 style="text-align: center;">Login</h2>
        <div class="form-group" style="padding-bottom: 10px;">
          <label for="exampleInputEmail1">Email address</label>
          <input style="width: 120%;" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group" style="padding-bottom: 10px;">
          <label for="exampleInputPassword1">Password</label>
          <input style="width: 120%;" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Login</button> 
      </form>

     

</div>